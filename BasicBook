public class BasicBook {
    private final String title;
    private final String author;
    private final String ISBN;
    private int copies;
    private final String description;
    private int pages;

    public BasicBook (String title, String author, String description, int pages, String ISBN, int copies){
        this.description = description;
        this.title = title;
        this.author = author;
        this.ISBN = ISBN;
        this.copies = copies;
        this.pages = pages;
    }
    public String getTitle () {
        return title;
    }

    public String getAuthor () {
        return author;
    }

    public String getISBN () {
        return ISBN;
    }

    public String getDescription () {
        return description;
    }

    public int getCopies() {
        return copies;
    }

    public void setCopies(int copies) {
        this.copies += copies;
    }

    public int getPages () {
    return pages;
    }

}
